<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.app.mapper.ClothesMapper">

    <select id="selectAll" resultType="Clothes">
        SELECT * FROM Clothes
    </select>

    <select id="selectById" resultType="Clothes">
        SELECT * FROM Clothes
        WHERE id = #{id}
    </select>

    <select id="selectByCategory" resultType="Clothes">
        SELECT * FROM Clothes
        WHERE category_id = #{Categoryid}
    </select>

</mapper>
